<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calculator.CalculateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <EditText
            android:id="@+id/taskInputEditText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:text="@string/taskInputEditText_enter"
            android:textAlignment="center"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/resultTextView_text"
            android:textAlignment="center" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/oneButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:text="@string/oneButtonText" />

                <Button
                    android:id="@+id/twoButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:text="@string/secondButtonText" />

                <Button
                    android:id="@+id/threeButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:text="@string/threeButtonText" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/fourButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fourButtonText"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/fiveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fiveButtonText"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/sixButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sixButtonText"
                    style="?android:attr/buttonBarButtonStyle" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/sevenButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sevenButtonText"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/eightButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eightButtonText"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/nineButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nineButtonText"
                    style="?android:attr/buttonBarButtonStyle" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/divineButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/divineButtonText"
                    style="?android:attr/buttonBarButtonStyle"/>

                <Button
                    android:id="@+id/multiplyButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/multiplyButtonText" />

                <Button
                    android:id="@+id/subtractionButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subtractionButtonText" />

            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/addButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/addButtonText" />

        <Button
            android:id="@+id/calculateButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculateButton_text" />

    </LinearLayout>

</FrameLayout>